<h1>Listing artworks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Pickup only</th>
      <th>Price</th>
      <th>Dimensions</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.title %></td>
        <td><%= artwork.description %></td>
        <td><%= artwork.photo %></td>
        <td><%= artwork.pickup_only %></td>
        <td><%= artwork.price %></td>
        <td><%= artwork.dimensions %></td>
        <td><%= artwork.color %></td>
        <td><%= link_to 'Show', artwork %></td>
        <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
        <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

